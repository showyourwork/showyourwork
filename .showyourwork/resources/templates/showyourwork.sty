% Add version info to header. Works for most AASTeX versions by replacing
% the \LaTeX macro within the frontmatter heading
\let\oldmaketitle\maketitle
\def\maketitle{%
    \let\oldLaTeX\LaTeX
    \def\LaTeX{\oldLaTeX/\showyourwork}
    \oldmaketitle
    \let\LaTeX\oldLaTeX
}

% Logging
\newwrite\sywLogFile
\immediate\openout\sywLogFile=showyourwork.log
